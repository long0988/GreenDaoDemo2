<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TasksCompletedView">
        <attr name="myradius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="ringColor" format="color"/>
        <attr name="ringBgColor" format="color"/>
        <attr name="isShowText" format="boolean"/>
        <attr name="textType" format="string|reference"/>
    </declare-styleable>
    <!--注意这里的name要和自定义View的名称一致，不然在xml布局中无法引用-->
    <declare-styleable name="CircleBarView">
        <attr name="progress_color" format="color"></attr>
        <attr name="bg_color" format="color"></attr>

        <attr name="bar_width" format="dimension"></attr>

        <attr name="start_angle" format="float"></attr>
        <attr name="sweep_angle" format="float"></attr>
    </declare-styleable>
    <declare-styleable name="WaveProgressView">
        <attr name="wave_color" format="color"></attr>
        <attr name="second_wave_color" format="color"></attr>
        <attr name="wave_bg_color" format="color"></attr>

        <attr name="wave_width" format="dimension"></attr>
        <attr name="wave_height" format="dimension"></attr>
    </declare-styleable>
    <!--风险等级-->
    <declare-styleable name="RiskLevelBar">
        <attr name="barHeight" format="dimension"/>
        <attr name="leftAndRightMargin" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="ArcProgress">
        <attr name="borderWidth" format="dimension"></attr>
        <attr name="unprogresColor" format="color"></attr>
        <attr name="progressColor" format="color"></attr>
        <attr name="tickWidth" format="dimension"></attr>
        <attr name="tickDensity" format="integer"></attr>
        <attr name="bgShow" format="boolean"></attr>
        <attr name="radius" format="dimension"></attr>
        <attr name="arcbgColor" format="color"></attr>
        <attr name="degree" format="integer"></attr>
        <attr name="arcCapRound" format="boolean"></attr>
        <attr name="progressStyle" format="enum">
            <enum name="tick" value="1"></enum>
            <enum name="arc" value="0"></enum>
        </attr>
    </declare-styleable>
</resources>