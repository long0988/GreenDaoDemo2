<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/zxingview"
        style="@style/MatchMatch"
        app:qrcv_animTime="1000"
        app:qrcv_borderColor="@android:color/white"
        app:qrcv_borderSize="1dp"
        app:qrcv_cornerColor="@color/colorPrimaryDark"
        app:qrcv_cornerLength="20dp"
        app:qrcv_cornerSize="3dp"
        app:qrcv_maskColor="#33FFFFFF"
        app:qrcv_qrCodeTipText="将二维码入框内扫描"
        app:qrcv_barCodeTipText="将条码放入框内扫描"
        app:qrcv_rectWidth="240dp"
        app:qrcv_scanLineColor="@color/colorPrimaryDark"
        app:qrcv_scanLineSize="1dp"
        app:qrcv_isShowLocationPoint="true"
        app:qrcv_isTipTextBelowRect="true"
        app:qrcv_topOffset="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="5dp">

        <TextView
            android:id="@+id/open_flashlight"
            style="@style/WrapWrapTv"
            android:text="打开闪光灯" />

        <TextView
            android:id="@+id/close_flashlight"
            style="@style/WrapWrapTv"
            android:text="关闭闪光灯" />

        <TextView
            android:id="@+id/scan_two_dimension"
            style="@style/WrapWrapTv"
            android:text="二维码" />

        <TextView
            android:id="@+id/scan_one_dimension"
            style="@style/WrapWrapTv"
            android:text="一维条码" />

        <TextView
            android:id="@+id/scan_all"
            style="@style/WrapWrapTv"
            android:text="所有码" />
        <TextView
            android:id="@+id/choose_from_gallery"
            style="@style/WrapWrapTv"
            android:text="图片中的码" />
    </LinearLayout>

</FrameLayout>